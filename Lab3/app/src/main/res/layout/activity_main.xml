<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:layout_marginHorizontal="30dp"
    android:layout_marginVertical="80dp"

    >


    <TextView
        android:id="@+id/operacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="operacion"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/resultado"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:text="Resultado"
        app:layout_constraintTop_toBottomOf="@id/operacion"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_potencia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="x^y"
        android:enabled="true"
        android:background="@drawable/button_black_background"
        app:layout_constraintTop_toBottomOf="@id/resultado"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_raiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="âˆšx"
        android:enabled="true"
        android:background="@drawable/button_black_background"
        app:layout_constraintTop_toBottomOf="@id/resultado"
        app:layout_constraintStart_toEndOf="@id/btn_potencia"/>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_parentesis_abierto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="("
        android:enabled="true"
        android:background="@drawable/button_black_background"
        app:layout_constraintTop_toBottomOf="@id/resultado"
        app:layout_constraintStart_toEndOf="@id/btn_raiz"/>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_parentesis_cerrado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="("
        android:enabled="true"
        android:background="@drawable/button_black_background"
        app:layout_constraintTop_toBottomOf="@id/resultado"
        app:layout_constraintStart_toEndOf="@id/btn_parentesis_abierto"
        app:layout_constraintEnd_toEndOf="parent"

        />


</androidx.constraintlayout.widget.ConstraintLayout>
